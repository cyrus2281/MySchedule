<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane     fx:controller="com.milad200281.github.ui.TodoItemDialogController"
                xmlns:fx="http://javafx.com/fxml" >
    <headerText>

    </headerText>
    <content>
        <GridPane vgap="10" hgap="10" >
            <Label text="Short Description" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            
            <Label  fx:id="shortDiscriptionLabel"
                    textFill="red" GridPane.rowIndex="1" GridPane.columnIndex="1">
            </Label>
            <Label text="Details" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextArea fx:id="detailsArea" GridPane.rowIndex="2" GridPane.columnIndex="1"
                      WrapText="true"            />
            <Label text="Deadline:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>
            <Label  fx:id="deadlineLabel"
                    textFill="red" GridPane.rowIndex="4" GridPane.columnIndex="1">
            </Label>
        </GridPane>
    </content>
</DialogPane>