                <Image url="@/toolbarButtonGraphics/general/Import24.gif" />
            </ImageView>
        </graphic>
        <GridPane.margin>
            <Insets left="10.0" />
        </GridPane.margin>
    </Label>
    <Label text="Merge: Add new items to the existing items from a msf file." GridPane.columnIndex="1" GridPane.rowIndex="6">
